{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "@types/node",
      "@types/webpack",
      "@types/webpack-env",
      "@nuxt/types",
      "@nuxtjs/sentry"
    ],
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "~/*": ["./client/*"],
      "@/*": ["./client/*"]
    }
  },
  "include": [
    "client/components/**/*",
    "client/layouts/**/*",
    "client/middleware/**/*",
    "client/pages/**/*",
    "client/plugins/**/*",
    "client/store/**/*",
    "client/utils/**/*"
  ],
  "exclude": ["node_modules", "client/tests"]
}
