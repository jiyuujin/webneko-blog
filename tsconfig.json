{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "@nuxt/types",
      "@nuxtjs/sentry",
      "@types/node",
      "@types/webpack",
      "@types/webpack-env"
    ],
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": [
    "app/types/shims-svg.d.ts",
    "app/types/shims-vue.d.ts",
    "app/components/**/*",
    "app/layouts/**/*",
    "app/middleware/**/*",
    "app/pages/**/*",
    "app/plugins/**/*",
    "app/store/**/*",
    "app/utils/**/*"
  ],
  "exclude": ["node_modules", "app/tests"]
}
