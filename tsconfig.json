{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "types": [
      "@types/node",
      "@types/webpack",
      "@types/webpack-env",
      "@nuxt/types"
    ],
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "components/**/*",
    "layouts/**/*",
    "middleware/**/*",
    "pages/**/*",
    "plugins/**/*",
    "store/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
