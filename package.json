{
  "name": "webneko-blog",
  "version": "3.6.0",
  "description": "Nuxt.js project",
  "author": "yuukit <yuma.kitamura@ponos.co.jp>",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build --no-lock",
    "start": "nuxt-ts start",
    "generate": "nuxt-ts generate --no-lock",
    "eslint": "eslint --ext .ts,.vue --ignore-path .gitignore -c .eslintrc.js .",
    "eslint:fix": "eslint --ext .ts,.vue --ignore-path .gitignore -c .eslintrc.js .",
    "stylelint": "stylelint --config .stylelintrc.yml './assets/**/*.scss' './components/**/*.vue'",
    "stylelint:fix": "stylelint --config .stylelintrc.yml './assets/**/*.scss' './components/**/*.vue' --fix",
    "test": "jest",
    "test-cover": "jest --coverage",
    "test:w": "npm run test-cover -- --watch",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@microlink/vanilla": "3.0.5",
    "@nekohack/j-stylebook": "1.0.0-beta.8",
    "@nekohack/tiny-components": "1.0.2",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/google-adsense": "1.1.3",
    "@nuxtjs/google-analytics": "2.4.0",
    "@nuxtjs/markdownit": "1.2.10",
    "@nuxtjs/markdownit-loader": "1.1.1",
    "@nuxtjs/pwa": "3.2.2",
    "@nuxtjs/sitemap": "2.4.0",
    "@vue/composition-api": "0.6.7",
    "contentful": "7.14.7",
    "dayjs": "1.9.3",
    "firebase": "7.24.0",
    "markdown-it": "11.0.1",
    "markdown-it-attrs": "3.0.3",
    "markdown-it-container": "3.0.0",
    "markdown-it-highlightjs": "3.3.0",
    "markdown-it-link-attributes": "3.0.0",
    "markdown-it-mark": "3.0.0",
    "markdown-it-toc": "1.1.0",
    "markdown-it-video": "0.6.3",
    "nuxt": "2.14.7",
    "sanitize-html": "2.1.0",
    "ts-node": "9.0.0",
    "vue-infinite-loading": "2.4.5"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@nekohack/eslint-config-vue": "1.0.0-beta.1",
    "@nuxt/types": "2.14.7",
    "@nuxt/typescript-build": "2.0.3",
    "@nuxt/typescript-runtime": "2.0.0",
    "@types/jest": "26.0.14",
    "@types/node": "12.12.68",
    "@types/webpack": "4.41.22",
    "@types/webpack-env": "1.15.3",
    "@typescript-eslint/eslint-plugin": "4.4.1",
    "@typescript-eslint/parser": "4.4.1",
    "@vue/test-utils": "1.1.0",
    "babel-core": "7.0.0-bridge.0",
    "core-js": "3.6.5",
    "eslint": "7.11.0",
    "fibers": "5.0.0",
    "jest": "26.5.3",
    "sass": "1.27.0",
    "sass-loader": "10.0.3",
    "stylelint": "13.7.2",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-recess-order": "2.1.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0",
    "ts-jest": "26.4.1",
    "vue-jest": "3.0.7"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.*\\.(vue)$": "vue-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "collectCoverageFrom": [
      "src/components/**/*.{vue}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.nuxt",
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ],
    "transformIgnorePatterns": [
      "node_modules"
    ]
  }
}
