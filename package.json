{
  "name": "webneko-blog",
  "version": "3.6.0",
  "description": "Nuxt.js project",
  "author": "yuukit <yuma.kitamura@ponos.co.jp>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "npm run build:feeds && npm run build:og-gen && npm run build:front",
    "build:front": "nuxt build --no-lock",
    "build:feeds": "ts-node --project tsconfig.builder.json scripts/feeds.ts",
    "build:og-gen": "ts-node --project tsconfig.builder.json scripts/og-gen.ts",
    "start": "nuxt start",
    "generate": "nuxt generate --no-lock",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
    "eslint": "eslint --ext .ts,.vue --ignore-path .gitignore -c .eslintrc.js .",
    "eslint:fix": "eslint --ext .ts,.vue --ignore-path .gitignore -c .eslintrc.js .",
    "stylelint": "stylelint --config .stylelintrc.yml 'client/assets/**/*.scss' './components/**/*.vue'",
    "stylelint:fix": "stylelint --config .stylelintrc.yml 'client/assets/**/*.scss' './components/**/*.vue' --fix",
    "test": "jest",
    "test-cover": "jest --coverage",
    "test:w": "npm run test-cover -- --watch",
    "backup": "ts-node --project tsconfig.builder.json scripts/backup.ts",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@nekohack/footer-ui": "1.0.0",
    "@nekohack/markdown-it-link-preview": "1.0.1",
    "@nekohack/normalize.css": "2.4.0",
    "@nuxtjs/composition-api": "0.31.0",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/google-adsense": "1.4.0",
    "@nuxtjs/google-analytics": "2.4.0",
    "@nuxtjs/markdownit": "2.0.0",
    "@nuxtjs/markdownit-loader": "1.2.0",
    "@nuxtjs/pwa": "3.3.5",
    "@nuxtjs/sentry": "5.1.6",
    "@nuxtjs/sitemap": "2.4.0",
    "contentful": "8.5.8",
    "dayjs": "1.10.7",
    "highlight.js": "11.3.1",
    "markdown-it": "12.3.0",
    "markdown-it-attrs": "4.1.1",
    "markdown-it-container": "3.0.0",
    "markdown-it-highlightjs": "3.5.0",
    "markdown-it-link-attributes": "3.0.0",
    "markdown-it-video": "0.6.3",
    "nuxt": "2.15.8",
    "puppeteer": "11.0.0",
    "sanitize-html": "2.6.1",
    "ts-node": "10.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "@nekohack/eslint-config-vue": "1.0.0",
    "@nuxt/types": "2.15.8",
    "@nuxt/typescript-build": "2.1.0",
    "@nuxt/typescript-runtime": "2.1.0",
    "@swc/core": "1.2.122",
    "@types/jest": "26.0.24",
    "@types/node": "16.11.15",
    "@types/webpack": "5.28.0",
    "@types/webpack-env": "1.16.3",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vue/test-utils": "1.3.0",
    "babel-core": "7.0.0-bridge.0",
    "core-js": "3.20.0",
    "dotenv": "10.0.0",
    "esbuild-loader": "2.18.0",
    "eslint": "7.32.0",
    "eslint-plugin-vuejs-accessibility": "0.7.1",
    "feed": "4.2.2",
    "fibers": "5.0.0",
    "fs-extra": "9.1.0",
    "jest": "26.6.3",
    "prettier": "2.5.1",
    "sass": "1.45.1",
    "sass-loader": "10.2.0",
    "stylelint": "14.2.0",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-recess-order": "2.6.0",
    "stylelint-config-standard": "23.0.0",
    "stylelint-scss": "4.1.0",
    "ts-jest": "26.5.6",
    "util": "0.12.4",
    "vue-jest": "3.0.7"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsconfig": "tsconfig.test.json"
      }
    },
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.*\\.(vue)$": "vue-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/client/tests/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/client/$1",
      "^~/(.*)$": "<rootDir>/client/$1",
      "^vue$": "vue/dist/vue.common.js"
    },
    "collectCoverageFrom": [
      "client/components/**/*.{vue}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.nuxt",
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ],
    "transformIgnorePatterns": [
      "node_modules"
    ]
  }
}
