{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["@types/jest", "@types/node", "@types/webpack", "@types/webpack-env", "@nuxt/types"],
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": [
    "app/types/shims-svg.d.ts",
    "app/types/shims-vue.d.ts",
    "app/tests/**/*",
    "node_modules/@nekohack/j-stylebook/dist/j-stylebook.css"
  ],
  "exclude": ["node_modules"]
}
